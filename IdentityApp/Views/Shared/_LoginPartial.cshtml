@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
  string dashboardRole = Configuration["Dashboard:Role"] ?? "Dashboard";
}

<nav class="nav">
  @if (User.Identity.IsAuthenticated)
  {
    @if (User.IsInRole(dashboardRole))
    { 
      <a asp-page="/Identity/Admin/Dashboard" class="nav-link bg-secondary text-white">@User.Identity.Name</a>
    }
    else
    { 
      <a asp-page="/Identity/Index" class="nav-link bg-secondary text-white">@User.Identity.Name</a>
    }
    <a asp-page="/Identity/SignOut" class="nav-link bg-secondary text-white">Sign Out</a>
  }
  else
  {
    <a asp-page="/Identity/SignIn" class="nav-link bg-secondary text-white">Sign In/Register</a>
  }
</nav>
